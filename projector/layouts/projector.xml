<?xml version="1.0" encoding="UTF-8" ?>
<container size="500,560" scrollable="0" color="#888888cc">
    <label pos="210,10" id="title">Projector</label>
    <container id="settings_1" color="#00000099" size="230,200" scrollable="0" pos="10,30">
        <label pos="10,10">Projection size in blocks:</label>
        <textbox id="projection_size_x" consumer="projection_size_x_consumer" placeholder="Size X" size="100,30" pos="10,30"/>
        <textbox size="100,30" id="projection_size_y" consumer ="projection_size_y_consumer" placeholder="Size Y" pos="120,30"/>
        <label pos="10,70">Projection offset in block:</label>
        <textbox size="100,30" pos="10,90" placeholder="Offset X" consumer ="projection_offset_x_consumer" id="projection_offset_x"/>
        <textbox size="100,30" id="projection_offset_y" pos="120,90" consumer ="projection_offset_y_consumer" placeholder="Offset Y"/>
        <label pos="10,130">Capture size in pixels:</label>
        <textbox size="100,30" id="capture_size_x" placeholder="Size X" pos="10,150" enabled="0"/>
        <textbox size="100,30" pos="120,150" id="capture_size_y" placeholder="Size Y" enabled="0"/>
    </container>
    <container id="settings_2" color="#00000099" size="230,200" scrollable="0" pos="260,30">
        <label pos="10,10">Projection refresh rate:</label>
        <textbox id="refresh_rate" consumer="fps_consumer" pos="10,30" size="210,30" placeholder="Framerate"/>
        <checkbox size="200,30" pos="10,70" id="optimization">Idle optimization</checkbox>
        <button id="axis" onclick="toggle_axis()" size="210,30" pos="10,150">Axis</button>
        <button id="orientation" onclick="toggle_orientation()" size="210,30" pos="10,110">Orientation</button>
    </container>
    <panel size="480,190" pos="10,360" id="logs" max-length="190"/>
    <button size="480,30" onclick="main_button_func()" id="main_button" pos="10,300">Start</button>
    <label pos="10,340">Logs:</label>
    <label id="status" pos="10,240">Status:</label>
    <button id="sync" size="480,30" pos="10,260" onclick="synchronize()">Synchronize</button>
</container>